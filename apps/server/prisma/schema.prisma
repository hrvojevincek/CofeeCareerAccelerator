// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  username     String        @unique
  email        String        @unique
  password     String
  category     String
  name         String?
  surname      String?
  city         String?
  bio          String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  applications Application[]
  experience   Experience[]
}

model Employer {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  category  String
  name      String?
  logoUrl   String?
  website   String?
  location  String?
  jobs      Job[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id           Int           @id @default(autoincrement())
  title        String
  description  String
  categories   String
  location     String
  money        String?
  employer     Employer      @relation(fields: [employerId], references: [id])
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  employerId   Int
  posted       Boolean       @default(true)
  applications Application[]
}

model Experience {
  id          Int    @id @default(autoincrement())
  userId      Int
  jobtitle    String
  company     String
  dates       String
  description String
  user        User?  @relation(fields: [userId], references: [id])
}

model Application {
  userId    Int
  jobId     Int
  hired     Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  job       Job?     @relation(fields: [jobId], references: [id])

  @@id([userId, jobId])
}
